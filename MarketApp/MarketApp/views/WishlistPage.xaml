    <Label.GestureRecognizers>
        <TapGestureRecognizer  Command="{Binding Path=BindingContext.DeleteFavoriteproductsComand, Source={x:Reference Page}}" CommandParameter="{Binding .}"   />
    </Label.GestureRecognizers>
</Label>-->