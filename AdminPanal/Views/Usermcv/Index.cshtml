

@model IEnumerable<AdminPanal.Models.UserT>

@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("Index", "Usermcv", FormMethod.Get))
{
    <div class="form-group">
        <div class="col-md-10" style="padding-right: 0px;padding-left: 0px;margin-bottom:15px">
            <input class="form-control text-box single-line" style="width:100%;max-width: 100%;height: 33px;padding: 10px;border-bottom-left-radius: 15px;border-top-left-radius: 15px;" id="search" name="search" type="text" value="">
        </div>
        <input type="submit" value="search" class="btn btn-danger col-md-2" style="margin-left:-5px;margin-bottom:15px" />
    </div>
    <br/>
    <b style="margin-right:15px; float:left;  margin-bottom:25px " class="">Search By</b>

    @Html.DropDownList("SearchBy", new List<SelectListItem>
{
    new SelectListItem {Text="FullName",Value="1",Selected=true},
    new SelectListItem {Text="Email",Value="2"},
    new SelectListItem {Text="Phone",Value="3"},
}, "Search By")
    @*<div style="float:left; margin-bottom:25px">
            <input type="radio" name="SearchBy" id="SearchBy" value="FullName" checked />
            <b style="margin-right:10px">Name</b>

            <input type="radio" name="SearchBy" id="SearchBy" value="Email" />
            <b style="margin-right:10px">Email</b>

            <input type="radio" name="SearchBy" id="SearchBy" value="Phone" />
            <b style="margin-right:10px">Phone</b>

        </div>*@


}


<table style="clear:both; " class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>

        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No User Match The Search</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.UserID }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.UserID })
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.UserID })*@
                </td>
            </tr>
        }
    }
</table>
